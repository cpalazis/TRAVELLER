<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SightsActivity">

    <TextView
        android:id="@+id/textView_M"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/textview_m"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="167dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/Museums_image"
        android:layout_width="56dp"
        android:layout_height="64dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_M"
        tools:layout_editor_absoluteX="177dp"
        tools:srcCompat="@tools:sample/avatars"
        tools:ignore="ContentDescription,MissingConstraints"
        android:contentDescription="@string/todo" />

    <ImageView
        android:id="@+id/Banks_Image"
        android:layout_width="48dp"
        android:layout_height="57dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_B"
        tools:layout_editor_absoluteX="181dp"
        tools:srcCompat="@tools:sample/avatars"
        tools:ignore="ContentDescription,MissingConstraints"
        android:contentDescription="@string/todo1" />

    <ImageView
        android:id="@+id/Hotel_Image"
        android:layout_width="56dp"
        android:layout_height="67dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_H"
        tools:layout_editor_absoluteX="177dp"
        tools:srcCompat="@tools:sample/avatars"
        tools:ignore="ContentDescription,MissingConstraints"
        android:contentDescription="@string/todo2" />

    <ImageView
        android:id="@+id/Caffe_Image"
        android:layout_width="62dp"
        android:layout_height="52dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_C"
        tools:layout_editor_absoluteX="174dp"
        tools:srcCompat="@tools:sample/avatars"
        tools:ignore="ContentDescription,MissingConstraints"
        android:contentDescription="@string/todo3" />

    <ImageView
        android:id="@+id/Restaurants_Image"
        android:layout_width="69dp"
        android:layout_height="63dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_R"
        app:layout_constraintVertical_bias="0.173"
        tools:layout_editor_absoluteX="171dp"
        tools:srcCompat="@tools:sample/avatars"
        tools:ignore="ContentDescription,MissingConstraints"
        android:contentDescription="@string/todo4" />

    <TextView
        android:id="@+id/textView_B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="@string/textview_b"
        app:layout_constraintTop_toBottomOf="@+id/Museums_image"
        tools:layout_editor_absoluteX="169dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView_H"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="@string/textview_h"
        app:layout_constraintTop_toBottomOf="@+id/Banks_Image"
        tools:layout_editor_absoluteX="168dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView_C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/textview_c"
        app:layout_constraintTop_toBottomOf="@+id/Hotel_Image"
        tools:layout_editor_absoluteX="169dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView_R"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/textview_r"
        app:layout_constraintTop_toBottomOf="@+id/Caffe_Image"
        tools:layout_editor_absoluteX="169dp"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>